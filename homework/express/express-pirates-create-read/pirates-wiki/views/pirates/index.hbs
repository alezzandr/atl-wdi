<h1>The Flyest Pirates of Da 7 Cs</h1>

<ul>
  {{#each pirates}}
    <li>name: {{name}}</li>
    <li>birthpale: {{birthplace}}</li>
    <li>death_year: {{death_year}}</li>
    <li>base: {{base}}</li>
    <li>nickname: {{nickname}}</li>
    <br>
    <div><a href="/pirates/{{@index}}/edit">Edit</a></div>
    <form action="/pirates/{{@index}}?_method=DELETE" method="POST">
    <input type="submit" value="DELETE"/>
    </form>
    <hr>
  {{/each}}
</ul>

<form action="/pirates/new">
    <input type="submit" value="Create a New Pirate" />
</form>